<div class="container">
    <div class="row">
        <!-- Hero Info Column -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <img src="<%= superhero.image.url %>" class="card-img-top" alt="<%= superhero.name %>">
                <div class="card-body">
                    <h1 class="card-title"><%= superhero.name %></h1>
                    <% if (superhero.biography && superhero.biography.fullName) { %>
                        <p class="text-muted"><%= superhero.biography.fullName %></p>
                    <% } %>
                    
                    <% if (locals.user) { %>
                        <form action="/profile/favorites/add/<%= superhero.id %>" method="POST">                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="far fa-heart me-2"></i> Add to favorites
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- Hero Details Column -->
        <div class="col-lg-8">
            <!-- Power Stats -->
            <div class="card mb-4 shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Powers</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% if (superhero.powerstats) { %>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Intelligence</label>
                                <div class="progress">
                                    <div class="progress-bar bg-info" role="progressbar" style="width: <%= superhero.powerstats.intelligence %>%" aria-valuenow="<%= superhero.powerstats.intelligence %>" aria-valuemin="0" aria-valuemax="100"><%= superhero.powerstats.intelligence %>%</div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Strength</label>
                                <div class="progress">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: <%= superhero.powerstats.strength %>%" aria-valuenow="<%= superhero.powerstats.strength %>" aria-valuemin="0" aria-valuemax="100"><%= superhero.powerstats.strength %>%</div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Speed</label>
                                <div class="progress">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: <%= superhero.powerstats.speed %>%" aria-valuenow="<%= superhero.powerstats.speed %>" aria-valuemin="0" aria-valuemax="100"><%= superhero.powerstats.speed %>%</div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Durability</label>
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: <%= superhero.powerstats.durability %>%" aria-valuenow="<%= superhero.powerstats.durability %>" aria-valuemin="0" aria-valuemax="100"><%= superhero.powerstats.durability %>%</div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Power</label>
                                <div class="progress">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: <%= superhero.powerstats.power %>%" aria-valuenow="<%= superhero.powerstats.power %>" aria-valuemin="0" aria-valuemax="100"><%= superhero.powerstats.power %>%</div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Combat Skills</label>
                                <div class="progress">
                                    <div class="progress-bar bg-dark" role="progressbar" style="width: <%= superhero.powerstats.combat %>%" aria-valuenow="<%= superhero.powerstats.combat %>" aria-valuemin="0" aria-valuemax="100"><%= superhero.powerstats.combat %>%</div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="col-12">
                                <p class="text-muted">No power information available.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <!-- Biography -->
            <div class="card mb-4 shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-book me-2"></i>Biography</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% if (superhero.biography) { %>
                            <div class="col-md-6 mb-3">                                <strong>Publisher:</strong>
                                <p><%= superhero.biography.publisher || 'Unknown' %></p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>First Appearance:</strong>
                                <p><%= superhero.biography.firstAppearance || 'Unknown' %></p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>Place of Birth:</strong>
                                <p><%= superhero.biography.placeOfBirth || 'Unknown' %></p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>Alignment:</strong>
                                <p><%= superhero.biography.alignment || 'Unknown' %></p>
                            </div>
                            <% if (superhero.biography.aliases && superhero.biography.aliases.length > 0) { %>
                                <div class="col-12 mb-3">
                                    <strong>Aliases:</strong>
                                    <p><%= superhero.biography.aliases.join(', ') %></p>
                                </div>
                            <% } %>
                        <% } else { %>
                            <div class="col-12">
                                <p class="text-muted">No biographical information available.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <!-- Appearance -->
            <div class="card mb-4 shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-eye me-2"></i>Appearance</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% if (superhero.appearance) { %>
                            <div class="col-md-3 mb-3">                                <strong>Gender:</strong>
                                <p><%= superhero.appearance.gender || 'Unknown' %></p>
                            </div>
                            <div class="col-md-3 mb-3">
                                <strong>Race:</strong>
                                <p><%= superhero.appearance.race || 'Unknown' %></p>
                            </div>
                            <div class="col-md-3 mb-3">
                                <strong>Height:</strong>
                                <p><%= (superhero.appearance.height && superhero.appearance.height.length > 0) ? superhero.appearance.height[1] : 'Unknown' %></p>
                            </div>
                            <div class="col-md-3 mb-3">
                                <strong>Weight:</strong>
                                <p><%= (superhero.appearance.weight && superhero.appearance.weight.length > 0) ? superhero.appearance.weight[1] : 'Unknown' %></p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>Eye Color:</strong>
                                <p><%= superhero.appearance.eyeColor || 'Unknown' %></p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>Hair Color:</strong>
                                <p><%= superhero.appearance.hairColor || 'Unknown' %></p>
                            </div>
                        <% } else { %>
                            <div class="col-12">
                                <p class="text-muted">No appearance information available.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <!-- Work & Connections -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-briefcase me-2"></i>Work & Connections</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% if (superhero.work) { %>
                            <div class="col-md-6 mb-3">                                <strong>Occupation:</strong>
                                <p><%= superhero.work.occupation || 'Unknown' %></p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>Base:</strong>
                                <p><%= superhero.work.base || 'Unknown' %></p>
                            </div>
                        <% } %>
                        
                        <% if (superhero.connections) { %>
                            <div class="col-md-6 mb-3">                                <strong>Group Affiliation:</strong>
                                <p><%= superhero.connections.groupAffiliation || 'Unknown' %></p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>Relatives:</strong>
                                <p><%= superhero.connections.relatives || 'Unknown' %></p>
                            </div>
                        <% } %>
                        
                        <% if (!superhero.work && !superhero.connections) { %>
                            <div class="col-12">
                                <p class="text-muted">No work or connection information available.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">        <a href="/" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i> Back to overview
        </a>
    </div>
</div>
