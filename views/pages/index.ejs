<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 text-center text-lg-start">
                <h1 class="display-4 mb-3 text-white">Utforsk Superheltuniverset</h1>
                <p class="lead text-white-50 mb-4">Finn informasjon om dine favoritt superhelter fra DC, Marvel og andre univers.</p>
                <form class="d-flex search-hero" action="/search" method="GET">
                    <input class="form-control me-2 form-control-lg" type="search" name="q" placeholder="Søk etter superhelt..." aria-label="Search" value="<%= typeof search !== 'undefined' ? search : '' %>">
                    <button class="btn btn-primary btn-lg" type="submit">
                        <i class="fas fa-search"></i> Søk
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Superheroes Section -->
<section class="py-4">
    <div class="container">
        <h2 class="mb-4">Superhelter</h2>
        
        <% if (superheroes && superheroes.length > 0) { %>
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                <% superheroes.forEach(hero => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="<%= hero.image.url %>" class="card-img-top" alt="<%= hero.name %>" style="height: 250px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title"><%= hero.name %></h5>
                                <% if (hero.biography && hero.biography.publisher) { %>
                                    <p class="card-text text-muted"><%= hero.biography.publisher %></p>
                                <% } %>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/superhero/<%= hero.id %>" class="btn btn-sm btn-primary">
                                        <i class="fas fa-info-circle me-1"></i> Mer info
                                    </a>
                                    <% if (locals.user) { %>
                                        <form action="/profile/favorites/add/<%= hero.id %>" method="POST">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="far fa-heart"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>">Forrige</a>
                            </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <span class="page-link">Forrige</span>
                            </li>
                        <% } %>
                        
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <% if (i === currentPage) { %>
                                <li class="page-item active">
                                    <span class="page-link"><%= i %></span>
                                </li>
                            <% } else { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + search : '' %>"><%= i %></a>
                                </li>
                            <% } %>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>">Neste</a>
                            </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <span class="page-link">Neste</span>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } else { %>
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i> Ingen superhelter funnet.
            </div>
        <% } %>
    </div>
</section>
